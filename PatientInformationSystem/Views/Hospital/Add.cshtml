@model PatientInformationSystem.Models.Hospital

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post">
            <div class="form-group">
                <label asp-for="HospitalName" class="control-label"></label>
                <input asp-for="HospitalName" class="form-control" />
                <span asp-validation-for="HospitalName" class="text-danger"></span>
            </div>

            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                  @TempData["msg"]
                </div>
            }

        <div class="form-group pt-3">
            <input type="submit" value="Add" class="btn btn-primary" />
            <a asp-action="GetAll" class="btn btn-primary">Back to List</a>
        </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}